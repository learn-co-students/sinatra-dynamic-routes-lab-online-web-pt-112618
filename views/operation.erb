<%num1 = params[:number1].to_i%>
<%num2 = params[:number2].to_i%>

<%case params[:operation]%>
<%when 'add'%>
  <%=(num1 + num2).to_s%>
<%when 'subtract'%>
  <%=(num1 - num2).to_s%>
<%when 'multiply'%>
  <%=(num1 * num2).to_s%>
<%when 'divide'%>
  <%=(num1 / num2).to_s%>
<%else%>
  <%=Incorrect operation%>
<%end%>
